# Hugging Face Configuration
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here_minimum_32_characters

# Weights & Biases Configuration  
# Get your API key from: https://wandb.ai/authorize
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=prompt-injection-detector

# Google Cloud Platform (Optional)
# Path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-training-data-bucket

# OpenAI (Optional - for synthetic data generation)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Model Configuration
MODEL_NAME=meta-llama/Llama-3.1-8B-Instruct
MAX_LENGTH=512
BATCH_SIZE=4
LEARNING_RATE=2e-5

# API Configuration (for production deployment)
API_HOST=0.0.0.0
API_PORT=8000
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=generate_a_secure_random_key_here

# Security Settings
# Set to 'production' in production environments
ENVIRONMENT=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log